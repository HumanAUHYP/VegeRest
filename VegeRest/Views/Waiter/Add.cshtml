@model VegeRest.Order

<div class="row justify-content-lg-cehter">
    <h1>Add new order</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div class="form-group">
                <label asp-for="OrderNumber" class="control-label">Order number</label>
                <input asp-for="OrderNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TableNumber" class="control-label">TableNumber</label>
                <input asp-for="TableNumber" class=" form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product" class="control-label">Product</label>
                <input asp-for="Product" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class=" btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to projects list</a>
</div>

